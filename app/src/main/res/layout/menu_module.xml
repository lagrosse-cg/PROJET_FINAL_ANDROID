<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuModule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAjoutModule"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/white"
            android:text="Ajouter Un Module"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnListeModules"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/white"
                android:text="Voir La Liste des modules"
                android:textColor="#2196F3"
                android:textSize="20sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="433dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRetourmod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Retour a l'acceuil"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>