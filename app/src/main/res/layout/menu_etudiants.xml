<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuEtudiants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:backgroundTint="@color/teal_200"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAjoutEtud"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Ajouter Un Etudiant"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnListeEtud"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Voir La Liste Des Etudiants"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRetourEtud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retour a l'acceuil"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>